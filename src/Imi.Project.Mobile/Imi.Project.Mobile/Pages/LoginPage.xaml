<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout  Margin="20,50,20,0">
            <Entry Placeholder="your handle" Text="{Binding Email}" />

            <Entry Placeholder="your password" Text="{Binding Password}" IsPassword="True" />

            <Button StyleClass="Button" Text="Login" Command="{Binding LoginCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>